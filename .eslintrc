{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-var": "error", // var 금지
    "eqeqeq": "error", // 일치 연산자 사용 필수
    "no-unused-vars": "error", // 사용하지 않는 변수 금지
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "react/jsx-uses-vars": "error"
  }
}
